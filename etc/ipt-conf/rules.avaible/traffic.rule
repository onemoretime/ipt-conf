
### Prepare for traffic accounting
$iptables -N Traffic_IN
$iptables -N Traffic_OUT

if [ "$IPV6_ENABLE" = "YES" ] ; then 
	$ip6tables -N Traffic_IN
	$ip6tables -N Traffic_OUT
fi
# Trafic counting
$iptables -A INPUT ! -s 192.168.0.0/16 -j Traffic_IN
$iptables -A OUTPUT ! -d 192.168.0.0/16 -j Traffic_OUT


if [ "$IPV6_ENABLE" = "YES" ] ; then 
	$ip6tables -A INPUT -s ::/0 -j Traffic_IN
	$ip6tables -A OUTPUT -d ::/0 -j Traffic_OUT
fi
